{% extends "layout/layout.twig" %}
{% from "macros.twig" import render_classes %}
{% block title %}{% trans 'All Interfaces' %} | {{ parent() }}{% endblock %}
{% block body_class 'interfaces' %}

{% block below_menu %}
<div class="uk-container uk-background-muted">
    <ul class="uk-breadcrumb">
        <li class="uk-first-column"><a href="{{ path('index.html') }}">{% trans 'Home' %}</a></li>
        <li><span>{% trans 'Interfaces' %}</span></li>
    </ul>
</div>
{% endblock %}

{% block page_content %}
<div class="uk-container uk-container-expand">
    <div class="uk-child-width-1-2@s uk-child-width-1-3@m" uk-grid>
        <div class="uk-width-auto">
            <h1 class="uk-heading">{% trans 'All Interfaces' %}</h1>
        </div>
    </div>
    <hr class="uk-divider-icon">

    <div class="uk-grid uk-grid-medium" data-uk-grid uk-sortable="handle: .sortable-icon">
        <div class="uk-width-1-1@l">
            <div class="uk-card uk-card-default">
                <div class="uk-card-header">
                    <h3 class="uk-card-title">{% trans 'Interfaces' %}</h3>
                </div>
                <div class="uk-card-body">
                    {{ render_classes(interfaces) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}